                <input type="text" class="input" maxlength="100" placeholder="Enter Address 2" name="address2" id="address2">
            </div>
            <div class="input_field">
                <label for="city">City</label>
                <input type="text" class="input" maxlength="100" placeholder="Enter City" name="city" id="city" required>
            </div>
            <div class="input_field">
                <label>State</label>
                <div class="custom_select" action="get-state">
                    <select required name="states">
