    <div class="wrapper">
        <div class="title">
            <h1>Profile</h1>
        </div>

        <form action="/add-profile" method="POST" class="form">
            <input type="hidden" name="usernamePro" value="<%=User%>">
            <div class="input_field">
                <label for="fullname">Full Name</label>
                <input type="text" class="input" maxlength="50" placeholder="Enter Name" name="fullname" id="fullname" required>
            </div>
            <div class="input_field">
                <label for="address1">Address 1</label>
